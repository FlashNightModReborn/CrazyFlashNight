<?xml version="1.0" encoding="UTF-8"?>
<!--
    重武器搓招配置
    与轻武器类似，但剑气释放替换为飞沙走石
    招式列表：
    - 飞沙走石: ↓↘ + A (下前A)，要求刀剑攻击 Lv1
    - 贯穿突刺: →→ (双击前)
    - 蓄力重劈: Shift + ↓ + A
    - 十六夜月华: ↑← + A (上后A)，要求上挑 Lv3
-->
<CommandSet id="heavyWeapon" label="重武器">
    <Commands>
        <!-- 飞沙走石: 下前 + A，要求刀剑攻击 Lv1 -->
        <Command name="飞沙走石" action="飞沙走石" priority="10">
            <Sequence>
                <Event>DOWN_FORWARD</Event>
                <Event>A_PRESS</Event>
            </Sequence>
            <Tags>
                <Tag>重武器</Tag>
                <Tag>远程</Tag>
                <Tag>必杀</Tag>
            </Tags>
            <Requirements>
                <Skill name="刀剑攻击" minLevel="1"/>
            </Requirements>
        </Command>

        <!-- 贯穿突刺: 双击前 -->
        <Command name="贯穿突刺" action="贯穿突刺" priority="5">
            <Sequence>
                <Event>DOUBLE_TAP_FORWARD</Event>
            </Sequence>
            <Tags>
                <Tag>重武器</Tag>
                <Tag>移动</Tag>
                <Tag>基础</Tag>
            </Tags>
        </Command>

        <!-- 蓄力重劈: Shift + 下 + A -->
        <Command name="蓄力重劈" action="蓄力重劈" priority="8">
            <Sequence>
                <Event>SHIFT_DOWN</Event>
                <Event>A_PRESS</Event>
            </Sequence>
            <Tags>
                <Tag>重武器</Tag>
                <Tag>近战</Tag>
                <Tag>蓄力</Tag>
            </Tags>
        </Command>

        <!-- 百万突刺: Shift前 + A，要求下劈 Lv1 -->
        <Command name="百万突刺" action="百万突刺" priority="10">
            <Sequence>
                <Event>SHIFT_FORWARD</Event>
                <Event>A_PRESS</Event>
            </Sequence>
            <Tags>
                <Tag>重武器</Tag>
                <Tag>移动</Tag>
                <Tag>必杀</Tag>
            </Tags>
            <Requirements>
                <Skill name="下劈" minLevel="1"/>
            </Requirements>
        </Command>

        <!-- 幻影剑舞: Shift前 + C，要求下劈 Lv4 -->
        <Command name="幻影剑舞" action="幻影剑舞" priority="10">
            <Sequence>
                <Event>SHIFT_FORWARD</Event>
                <Event>C_PRESS</Event>
            </Sequence>
            <Tags>
                <Tag>重武器</Tag>
                <Tag>近战</Tag>
                <Tag>必杀</Tag>
            </Tags>
            <Requirements>
                <Skill name="下劈" minLevel="1"/>
            </Requirements>
        </Command>

        <!-- 全垒打: 上 + A -->
        <Command name="全垒打" action="全垒打" priority="7">
            <Sequence>
                <Event>UP</Event>
                <Event>A_PRESS</Event>
            </Sequence>
            <Tags>
                <Tag>重武器</Tag>
                <Tag>近战</Tag>
                <Tag>上挑</Tag>
            </Tags>
        </Command>

        <!-- 追地祀: 下 + C -->
        <Command name="追地祀" action="追地祀" priority="7">
            <Sequence>
                <Event>DOWN</Event>
                <Event>C_PRESS</Event>
            </Sequence>
            <Tags>
                <Tag>重武器</Tag>
                <Tag>远程</Tag>
                <Tag>必杀</Tag>
            </Tags>
        </Command>

        <!-- 粉碎切割: 上 + C，要求上挑 Lv1 -->
        <Command name="粉碎切割" action="粉碎切割" priority="7">
            <Sequence>
                <Event>UP</Event>
                <Event>C_PRESS</Event>
            </Sequence>
            <Tags>
                <Tag>重武器</Tag>
                <Tag>近战</Tag>
                <Tag>上挑</Tag>
            </Tags>
            <Requirements>
                <Skill name="上挑" minLevel="1"/>
            </Requirements>
        </Command>

        <!-- 空坠强袭: 下 + A，要求下劈 Lv1 -->
        <Command name="空坠强袭" action="空坠强袭" priority="8">
            <Sequence>
                <Event>DOWN_BACK</Event>
                <Event>A_PRESS</Event>
            </Sequence>
            <Tags>
                <Tag>重武器</Tag>
                <Tag>近战</Tag>
                <Tag>必杀</Tag>
            </Tags>
            <Requirements>
                <Skill name="下劈" minLevel="1"/>
            </Requirements>
        </Command>

        <!-- 十六夜月华: 上后 + A -->
        <Command name="十六夜月华" action="十六夜月华" priority="7">
            <Sequence>
                <Event>UP_BACK</Event>
                <Event>A_PRESS</Event>
            </Sequence>
            <Tags>
                <Tag>重武器</Tag>
                <Tag>近战</Tag>
                <Tag>反击</Tag>
            </Tags>
        </Command>

        <!-- 见切: 后 + C，要求上挑 Lv1 -->
        <Command name="见切" action="见切" priority="7">
            <Sequence>
                <Event>SHIFT_BACK</Event>
            </Sequence>
            <Tags>
                <Tag>重武器</Tag>
                <Tag>近战</Tag>
                <Tag>反击</Tag>
            </Tags>
            <Requirements>
                <Skill name="上挑" minLevel="1"/>
            </Requirements>
        </Command>
    </Commands>

