_root.军牌配置 = function(目标, 军牌名)
{
	var 称号文本 = _root.获得翻译("菜鸟");
	var 人物 = _root.gameworld[目标];
	if (军牌名 != "")
	{
		称号文本 = _root.根据物品名查找属性(军牌名, 14)[0];
		var _loc5_ = 称号文本.indexOf(">") + 1;
		var _loc6_ = _loc5_ == 0 ? 称号文本.length - 1 : 称号文本.lastIndexOf("<") - 1;
		称号文本 = 称号文本.slice(0, _loc5_) + _root.获得翻译(称号文本.slice(_loc5_, _loc6_ + 1)) + 称号文本.slice(_loc6_ + 1, 称号文本.length);
	}
	人物.称号 = 称号文本;
	if (目标 == _root.控制目标)
	{
		_root.玩家称号 = 人物.称号;
	}
};
