
_root.长枪配置 = function(目标, 长枪名, 强化等级)
{
	var 人物 = _root.gameworld[目标];
	人物.长枪 = 长枪名;
	人物.长枪属性数组 = _root.根据物品名查找全部属性(长枪名);
	人物.长枪属性数组[14][13] = _root.强化计算(人物.长枪属性数组[14][13], 强化等级);
	人物.长枪弹匣容量 = 人物.长枪属性数组[14][0];
	if(isNaN(人物.长枪射击次数[长枪名])) 人物.长枪射击次数[长枪名] = 0;
};

