<?xml version="1.0" encoding="UTF-8"?>
<!--
    轻武器搓招配置
    招式列表：
    - 剑气释放: ↓↘ + A (下前A)，要求刀剑攻击 Lv3
    - 贯穿突刺: →→ (双击前)，要求刀剑攻击 Lv1
    - 蓄力重劈: Shift + ↓ + A，要求下劈 Lv1
    - 十六夜月华: ← + A (后A)，要求上挑 Lv1
-->
<CommandSet id="lightWeapon" label="轻武器">
    <Commands>
        <!-- 剑气释放: 下前 + A，要求刀剑攻击 Lv3 -->
        <Command name="剑气释放" action="剑气释放" priority="10">
            <Sequence>
                <Event>DOWN_FORWARD</Event>
                <Event>A_PRESS</Event>
            </Sequence>
            <Tags>
                <Tag>轻武器</Tag>
                <Tag>远程</Tag>
                <Tag>必杀</Tag>
            </Tags>
            <Requirements>
                <Skill name="刀剑攻击" minLevel="3"/>
            </Requirements>
        </Command>

        <!-- 贯穿突刺: 双击前，要求刀剑攻击 Lv1 -->
        <Command name="贯穿突刺" action="贯穿突刺" priority="5">
            <Sequence>
                <Event>DOUBLE_TAP_FORWARD</Event>
            </Sequence>
            <Tags>
                <Tag>轻武器</Tag>
                <Tag>移动</Tag>
                <Tag>基础</Tag>
            </Tags>
            <Requirements>
                <Skill name="刀剑攻击" minLevel="1"/>
            </Requirements>
        </Command>

        <!-- 蓄力重劈: Shift + 下 + A，要求下劈 Lv1 -->
        <Command name="蓄力重劈" action="蓄力重劈" priority="8">
            <Sequence>
                <Event>SHIFT_DOWN</Event>
                <Event>A_PRESS</Event>
            </Sequence>
            <Tags>
                <Tag>轻武器</Tag>
                <Tag>近战</Tag>
                <Tag>蓄力</Tag>
            </Tags>
            <Requirements>
                <Skill name="下劈" minLevel="1"/>
            </Requirements>
        </Command>

        <!-- 百万突刺: Shift前 + A，要求下劈 Lv1 -->
        <Command name="百万突刺" action="百万突刺" priority="10">
            <Sequence>
                <Event>SHIFT_FORWARD</Event>
                <Event>A_PRESS</Event>
            </Sequence>
            <Tags>
                <Tag>轻武器</Tag>
                <Tag>移动</Tag>
                <Tag>必杀</Tag>
            </Tags>
            <Requirements>
                <Skill name="下劈" minLevel="1"/>
            </Requirements>
        </Command>

        <!-- 月光斩: 上 + A，要求上挑 Lv1 -->
        <Command name="月光斩" action="月光斩" priority="7">
            <Sequence>
                <Event>UP</Event>
                <Event>A_PRESS</Event>
            </Sequence>
            <Tags>
                <Tag>轻武器</Tag>
                <Tag>近战</Tag>
                <Tag>上挑</Tag>
            </Tags>
            <Requirements>
                <Skill name="上挑" minLevel="1"/>
            </Requirements>
        </Command>

        <!-- 次元斩: 下 + C -->
        <Command name="次元斩" action="次元斩" priority="7">
            <Sequence>
                <Event>DOWN</Event>
                <Event>C_PRESS</Event>
            </Sequence>
            <Tags>
                <Tag>轻武器</Tag>
                <Tag>远程</Tag>
                <Tag>必杀</Tag>
            </Tags>
        </Command>

        <!-- 粉碎切割: 上 + C，要求上挑 Lv1 -->
        <Command name="粉碎切割" action="粉碎切割" priority="7">
            <Sequence>
                <Event>UP</Event>
                <Event>C_PRESS</Event>
            </Sequence>
            <Tags>
                <Tag>轻武器</Tag>
                <Tag>近战</Tag>
                <Tag>上挑</Tag>
            </Tags>
            <Requirements>
                <Skill name="上挑" minLevel="1"/>
            </Requirements>
        </Command>

        <!-- 猎影十字: 下 + A，要求下劈 Lv1 -->
        <Command name="猎影十字" action="猎影十字" priority="8">
            <Sequence>
                <Event>DOWN_BACK</Event>
                <Event>A_PRESS</Event>
            </Sequence>
            <Tags>
                <Tag>轻武器</Tag>
                <Tag>近战</Tag>
                <Tag>必杀</Tag>
            </Tags>
            <Requirements>
                <Skill name="下劈" minLevel="1"/>
            </Requirements>
        </Command>

        <!-- 十六夜月华: 后 + A，要求上挑 Lv1 -->
        <Command name="十六夜月华" action="十六夜月华" priority="7">
            <Sequence>
                <Event>BACK</Event>
                <Event>A_PRESS</Event>
            </Sequence>
            <Tags>
                <Tag>轻武器</Tag>
                <Tag>近战</Tag>
                <Tag>反击</Tag>
            </Tags>
            <Requirements>
                <Skill name="上挑" minLevel="1"/>
            </Requirements>
        </Command>

        <!-- 见切: 后 + C，要求上挑 Lv1 -->
        <Command name="见切" action="见切" priority="7">
            <Sequence>
                <Event>SHIFT_BACK</Event>
            </Sequence>
            <Tags>
                <Tag>轻武器</Tag>
                <Tag>近战</Tag>
                <Tag>反击</Tag>
            </Tags>
            <Requirements>
                <Skill name="上挑" minLevel="1"/>
            </Requirements>
        </Command>
    </Commands>

