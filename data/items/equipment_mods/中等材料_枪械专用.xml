<?xml version="1.0" encoding="UTF-8"?>
<root>
    <!-- 中等材料 - 枪械专用配件 -->

    <mod>
        <name>小型液晶屏</name>
        <use>长枪,手枪</use>
        <stats>
            <override>
                <criticalhit>20</criticalhit>
            </override>
        </stats>
        <description>电子显示组件,提供信息显示,增加暴击率。</description>
        <tag>瞄具</tag>
    </mod>

    <mod>
        <name>烈性火药</name>
        <use>手枪,长枪</use>
        <stats>
            <override>
                <criticalhit>30</criticalhit>
            </override>
            <flat>
                <accuracy>-10</accuracy>  <!-- 命中期望伤害: -2.62% -->
                <diffusion>5</diffusion>
            </flat>
        </stats>
        <description>高能量火药,大幅提升暴击率,但会降低精准度。</description>
        <tag>弹药</tag>
    </mod>

    <mod>
        <name>强化金属管</name>
        <use>长枪,手枪</use>
        <stats>
            <percentage>
                <power>7</power>
                <velocity>12</velocity>
            </percentage>
        </stats>
        <description>经二次强化处理的高膛压枪管部件,提升威力与弹速。</description>
        <tag>枪管</tag>
    </mod>

    <mod>
        <name>霰弹枪口收束器</name>
        <use>长枪,手枪</use>
        <weapontype>霰弹枪</weapontype>
        <tag>枪口</tag>
        <stats>
            <percentage>
                <diffusion>-70</diffusion>
                <velocity>15</velocity>
            </percentage>
        </stats>
        <description>动态收束装置,大幅降低霰弹扩散并提升弹速。</description>
    </mod>

    <mod>
        <name>脉冲式惯性阻尼器</name>
        <use>长枪,手枪</use>
        <tag>枪口</tag>
        <stats>
            <override>
                <sound>null</sound>
                <muzzle>null</muzzle>
                <silence>90%</silence>
            </override>
            <merge>
                <slay>5</slay>
            </merge>
        </stats>
        <description>消除枪口火光与射击声,大幅降低被敌人察觉的风险。附加收割残血敌人的能力。</description>
    </mod>

    <mod>
        <name>透镜</name>
        <use>长枪,手枪</use>
        <stats>
            <flat>
                <accuracy>60</accuracy>  <!-- 命中期望伤害: +10.00% -->
            </flat>
        </stats>
        <description>精密光学元件,大幅提升瞄准精度。</description>
        <tag>瞄具</tag>
    </mod>

    <mod>
        <name>枪械内构强化套件</name>
        <use>长枪,手枪</use>
        <stats>
            <percentage>
                <power>9</power>
            </percentage>
            <!-- 电力适配：能量管线与反馈回路在电力结构支持下效能提升 -->
            <tagSwitch>
                <tag name="电力">
                    <percentage>
                        <power>2</power>
                    </percentage>
                </tag>
            </tagSwitch>
        </stats>
        <description>模块化改造组件,全面强化枪械内部结构。在电力结构支持下额外提升威力。</description>
        <tag>机匣内构</tag>
    </mod>
    <mod>
        <name>磁稳针束霰弹</name>
        <use>手枪,长枪</use>
        <weapontype>霰弹枪</weapontype>
        <stats>
            <flat>
                <power>-10</power>
            </flat>
            <override>
                <damagetype>破击</damagetype>
                <magictype>装甲</magictype>
            </override>
        </stats>
        <description>穿甲特化针束霰弹，但会略微降低威力。</description>
        <tag>弹药</tag>
    </mod>
</root>
