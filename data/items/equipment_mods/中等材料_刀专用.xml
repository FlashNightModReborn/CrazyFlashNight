<?xml version="1.0" encoding="UTF-8"?>
<root>
    <!-- 中等材料 - 刀专用配件 -->

    <mod>
        <name>护手</name>
        <use>刀</use>
        <tag>刀身</tag>
        <skill>
            <skillname>弧光斩</skillname>
            <description>经过护手改装的武器可以使用弧光斩。</description>
            <cd>10000</cd>
            <mp>40</mp>
        </skill>
        <description>近战防护部件,赋予武器弧光斩技能。</description>
    </mod>

    <mod>
        <name>石英磨刀石</name>
        <use>刀</use>
        <stats>
            <percentage>
                <power>9</power>
            </percentage>
        </stats>
        <description>精密打磨工具,锋利化刀刃,提升近战威力。</description>
        <tag>刃面处理</tag>
    </mod>

    <mod>
        <name>骨誓铭牌</name>
        <use>刀</use>
        <stats>
            <flat>
                <weight>1.5</weight>
                <defence>15</defence>
            </flat>
        </stats>
        <skill>
            <skillname>黑刀斩术</skillname>
            <description>经过骨誓铭牌改装的武器可以使用黑刀斩术。</description>
            <cd>6000</cd>
            <mp>45</mp>
        </skill>
        <description>烧蚀硬化骨与铭牌重坠,增加防御并赋予黑刀斩术。</description>
        <tag>柄尾</tag>
    </mod>

    <mod>
        <name>配重坠</name>
        <use>刀</use>
        <stats>
            <flat>
                <weight>1.5</weight>
            </flat>
        </stats>
        <skill>
            <skillname>回旋裂地</skillname>
            <description>经过配重坠改装的武器可以使用回旋裂地。</description>
            <cd>12000</cd>
            <mp>50</mp>
        </skill>
        <description>精密配重调节单元,优化打击轨迹,赋予回旋裂地技能。</description>
        <tag>柄尾</tag>
    </mod>

    <mod>
        <name>强化柄芯</name>
        <use>刀</use>
        <stats>
            <override>
                <modslot>3</modslot>
            </override>
            <flat>
                <weight>2</weight>
            </flat>
        </stats>
        <provideTags>扩展模组槽,强化框架</provideTags>
        <detachPolicy>cascade</detachPolicy>
        <description>高强度内核加固条,提供结构支撑并将武器配件槽扩展至3个。</description>
        <tag>柄芯</tag>
    </mod>

    <mod>
        <name>挂环指槽板</name>
        <use>刀</use>
        <stats>
            <override>
                <skillmultipliers>
                    <瞬步斩>2.5</瞬步斩>
                    <凶斩>2.5</凶斩>
                </skillmultipliers>
            </override>
            <flat>
                <weight>0.5</weight>
            </flat>
        </stats>
        <description>带指槽的侧板组件,优化握持防脱,为瞬步斩和凶斩赋予150%的锋利度加成。</description>
        <tag>柄侧板</tag>
    </mod>

    <mod>
        <name>电击导能柄</name>
        <use>刀</use>
        <stats>
            <flat>
                <power>-10</power>
            </flat>
            <override>
                <damagetype>破击</damagetype>
                <magictype>电</magictype>
            </override>
        </stats>
        <description>高压脉冲传导柄部,附加电击打击,略微降低威力。</description>
        <tag>握柄核心</tag>
    </mod>
</root>
