<?xml version="1.0" encoding="utf-8"?>
<root>
    <!-- 装备强化配置 -->
    <EquipmentConfig>
        <!-- 强化等级对应的倍率表 -->
        <!-- 原公式: delta = 1 + 0.01 * (level - 1) * (level + 4) -->
        <LevelStatList>
            <Level index="0">1</Level>     <!-- 占位 -->
            <Level index="1">1</Level>     <!-- Lv1 基础 -->
            <Level index="2">1.06</Level>  <!-- Lv2 -->
            <Level index="3">1.14</Level>  <!-- Lv3 -->
            <Level index="4">1.24</Level>  <!-- Lv4 -->
            <Level index="5">1.36</Level>  <!-- Lv5 -->
            <Level index="6">1.5</Level>   <!-- Lv6 -->
            <Level index="7">1.66</Level>  <!-- Lv7 -->
            <Level index="8">1.84</Level>  <!-- Lv8 -->
            <Level index="9">2.04</Level>  <!-- Lv9 -->
            <Level index="10">2.26</Level> <!-- Lv10 -->
            <Level index="11">2.5</Level>  <!-- Lv11 -->
            <Level index="12">2.76</Level> <!-- Lv12 -->
            <Level index="13">3.04</Level> <!-- Lv13 -->
        </LevelStatList>

        <!-- 需要保留小数的属性列表 -->
        <DecimalProperties>
            <Property name="weight" precision="1"/>
            <Property name="rout" precision="1"/>
            <Property name="vampirism" precision="1"/>
        </DecimalProperties>

        <!-- 进阶系统配置 -->
        <TierSystem>
            <!-- 进阶路线定义 -->
            <!--
                id: 路线唯一标识
                types: 适用的装备类型（逗号分隔，支持多类型）
                excludeUse: 排除的use类型（可选）
                maxLevel: 装备等级上限（装备等级 < maxLevel 才可使用默认进阶）
                displayName: 显示名称
                description: 描述文本
            -->
            <TierPaths>
                <!-- 防具-防御路线（原有的二阶/三阶/四阶） -->
                <Path id="armor_defence" types="防具" excludeUse="颈部装备" maxLevel="10">
                    <DisplayName>防御强化</DisplayName>
                    <Description>提升防御、生命和魔法值</Description>
                    <Step order="1" tier="二阶"/>
                    <Step order="2" tier="三阶"/>
                    <Step order="3" tier="四阶"/>
                </Path>
            </TierPaths>
            <TierPaths>
                <!-- 防具-测试路线（墨冰 狱火 冷凝） -->
                <Path id="test" types="防具" excludeUse="颈部装备" maxLevel="100">
                    <DisplayName>防御强化</DisplayName>
                    <Description>提升防御、生命和魔法值</Description>
                    <Step order="1" tier="墨冰"/>
                    <Step order="2" tier="狱火"/>
                    <Step order="3" tier="冷凝"/>
                </Path>
            </TierPaths>

            <!-- 进阶等级映射 -->
            <TierMapping name="二阶" key="data_2" material="二阶复合防御组件"/>
            <TierMapping name="三阶" key="data_3" material="三阶复合防御组件"/>
            <TierMapping name="四阶" key="data_4" material="四阶复合防御组件"/>
            <TierMapping name="墨冰" key="data_ice" material="墨冰战术涂料"/>
            <TierMapping name="狱火" key="data_fire" material="狱火战术涂料"/>
            <TierMapping name="冷凝" key="data_ice_gold_stolen" material="铁枪冷凝核心"/>
            <TierMapping name="炽熔" key="data_fire_gold_stolen" material="铁枪炽熔核心"/>

            <!-- 默认进阶数据 -->
            <DefaultTierData>
                <Tier name="二阶">
                    <level>12</level>
                    <defence>80</defence>
                    <hp>50</hp>
                    <mp>50</mp>
                    <damage>15</damage>
                </Tier>
                <Tier name="三阶">
                    <level>25</level>
                    <defence>180</defence>
                    <hp>80</hp>
                    <mp>80</mp>
                    <damage>35</damage>
                </Tier>
                <Tier name="四阶">
                    <level>35</level>
                    <defence>255</defence>
                    <hp>100</hp>
                    <mp>100</mp>
                    <damage>60</damage>
                </Tier>
            </DefaultTierData>
        </TierSystem>
    </EquipmentConfig>
</root>
